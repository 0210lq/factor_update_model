# ============================================================
# 数据库连接配置 - 示例文件
# ============================================================
# 使用说明:
# 1. 复制此文件为 database.yaml
# 2. 填入实际的数据库连接信息
# 3. 确保 database.yaml 已添加到 .gitignore
# ============================================================

# 主数据库连接
database:
  host: "your-database-host.example.com"
  port: 3306
  database: "your_database_name"
  user: "your_username"
  password: "your_password"
  charset: "utf8mb4"

# 连接池配置 (可选)
connection_pool:
  # 连接池大小
  pool_size: 5
  # 最大溢出连接数
  max_overflow: 10
  # 连接超时时间 (秒)
  pool_timeout: 30
  # 连接回收周期 (秒)
  pool_recycle: 3600
